<Page x:Class="proge_raamatukogu.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Home Page">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="1" FontSize="20" FontFamily="Impact" Text="Raamatu lisamine" Margin="0, 5, 0, 20" />
        <TextBlock Grid.ColumnSpan="1" Grid.Column="1" Grid.Row="2" FontSize="20" Text="ISBN:" Margin="0 0 15 0"/>        
        <TextBox x:Name="tb_isbn" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="1"
                 TextWrapping="Wrap" TextChanged="ISBN" ></TextBox>
        <Button x:Name="lisaRaamat" Grid.Column="2" Grid.Row="3" Content="Lisa Raamat" Margin="0 20 0 0" Click="Lisa"/>
    </Grid>
</Page>