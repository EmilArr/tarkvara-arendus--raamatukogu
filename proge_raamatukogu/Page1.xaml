<Page x:Class="proge_raamatukogu.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Page 1">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <TextBlock Grid.ColumnSpan="1" Grid.Column="2" Grid.Row="1"
               FontSize="20" FontFamily="Impact" Text="Rambo raamatud"
               Margin="0, 5, 0, 15" />
        <Button x:Name="lisaRaamat" Content="Lisa raamat" 
     Grid.Column="2" Grid.Row="2" Margin="5, 8, 10, 8" 
     Click="lisaRaamat_Click"/>
        <Button x:Name="lisaKasutaja" Content="Lisa kasutaja" 
     Grid.Column="2" Grid.Row="3" Margin="5, 8, 10, 8" Click="lisaKasutaja_Click" 
     />
        <Button x:Name="raamatuTagastus" Content="Tagasta raamat" 
     Grid.Column="2" Grid.Row="4" Margin="5, 8, 10, 8" Click="raamatuTagastus_Click" 
    />
        <Button x:Name="raamatuLaenutus" Content="Laenuta raamat" 
     Grid.Column="2" Grid.Row="5" Margin="5, 8, 10, 8" Click="raamatuLaenutus_Click" 
     />
    </Grid>
</Page>