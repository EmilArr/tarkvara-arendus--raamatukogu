<Page x:Class="proge_raamatukogu.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Home Page">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <!-- UI Controls placed after Grid's definitions -->
        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="20" FontFamily="Impact" Text="Kasutaja lisamine" Margin="0,5,0,15" />

        <TextBlock Grid.Column="1" Grid.Row="2" FontSize="20" Text="Nimi: " Margin="0 20 0 0"/>
        <TextBox x:Name="tb_nimi" Grid.Column="2" Grid.Row="2" TextWrapping="Wrap" Margin="0 20 0 0" TextChanged="nimi" />

        <TextBlock Grid.Column="1" Grid.Row="3" FontSize="20" Text="Isikukood: " Margin="0 20 0 0"/>
        <TextBox x:Name="tb_isikukood" Grid.Column="2" Grid.Row="3" TextWrapping="Wrap" Margin="0 20 0 0" TextChanged="isikukood" />

        <TextBlock Grid.Column="1" Grid.Row="4" FontSize="20" Text="Aadress: " Margin="0 20 0 0"/>
        <TextBox x:Name="tb_aadress" Grid.Column="2" Grid.Row="4" TextWrapping="Wrap" Margin="0 20 0 0" TextChanged="aadress" />

        <Button x:Name="LisaK" Grid.Column="2" Grid.Row="5" Content="Lisa" Margin="0,20,0,0" Click="Lisa"/>
    </Grid>
</Page>
