<Page x:Class="proge_raamatukogu.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Home Page">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1"
                   FontSize="20" FontFamily="Impact" 
                   Text="Kasutaja lisamine"
                   Margin="0,5,0,15" />

        <TextBox x:Name="tb_nimi" Grid.Column="1" Grid.Row="2"
                 TextWrapping="Wrap" />

        <TextBlock Grid.Column="1" Grid.Row="3"
                   FontSize="20" FontFamily="Impact" 
                   Text="Kasutaja ID lisamine" Margin="0,10,0,15" />

        <TextBox x:Name="tb_UserID" Grid.Column="1" Grid.Row="4"
                 TextWrapping="Wrap" />

      
        <Button x:Name="btnSaveAll" Grid.Column="1" Grid.Row="5"
                Content="Salvesta Kõik" Margin="0,20,0,0" Click="SaveAllTextBoxes" />
    </Grid>
</Page>
