<Page x:Class="proge_raamatukogu.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Home Page">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <!-- UI Controls placed after Grid's definitions -->
        <TextBlock Grid.Column="1" Grid.Row="1"
               FontSize="20" FontFamily="Impact" 
               Text="Kasutaja lisamine"
               Margin="0,5,0,15" />

        <TextBox x:Name="tb_nimi" Grid.Column="1" Grid.Row="2"
             TextWrapping="Wrap" />

        <Button x:Name="lisaNimi" Grid.Column="2" Grid.Row="2"
            Content="Lisa" Margin="10,0,0,0" Click="LisaUser"/>

        <TextBlock Grid.Column="1" Grid.Row="3"
               FontSize="20" FontFamily="Impact" 
               Text="Kasutaja ID lisamine" Margin="0,10,0,15" />

        <TextBox x:Name="tb_UserID" Grid.Column="1" Grid.Row="4"
             TextWrapping="Wrap" />

        <Button x:Name="lisaUserID" Grid.Column="2" Grid.Row="4"
            Content="Lisa" Margin="10,0,0,0" Click="LisaUserID"/>

        <TextBlock Grid.Column="1" Grid.Row="5"
               FontSize="20" FontFamily="Impact" 
               Text="Lisamise kuupäev (2025-05-26)" Margin="0,10,0,15" />

        <TextBox x:Name="tb_Date" Grid.Column="1" Grid.Row="6"
             TextWrapping="Wrap" />

        <Button x:Name="lisaDate" Grid.Column="2" Grid.Row="6"
            Content="Lisa" Margin="10,0,0,0" Click="LisaDate"/>
    </Grid>
</Page>
